{
    "name": "webapi",
    "private": true,
    "version": "0.0.1",
    "description": "The WebAPI project",
    "repository": {
        "type": "git",
        "url": ""
    },
    "author": "",
    "license": "UNLICENSED",
    "scripts": {
        "seed_test": "node ./dist/tests/seed.js",
        "mkdatabase": "rm -fR ./schema/dist && tsc -p ./schema && node ./schema/dist/build.js",
        "seed": "rm -fR ./schema/dist && tsc -p ./schema && node ./schema/dist/seed.js",
        "start": "npm run serve",
        "build": "npm run build-ts && npm run tslint",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "yarn mkdatabase .env.test && yarn seed_test .env.test && jest --detectOpenHandles --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "tslint-fix": "tslint --fix -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "yarn build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@blendsdk/express": "^0.9.11",
        "@blendsdk/stdlib": "^1.0.5",
        "@types/bcryptjs": "^2.4.2",
        "axios": "^0.19.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "chalk": "^2.4.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "ejs": "^2.6.2",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-bearer-token": "^2.4.0",
        "express-session": "^1.16.2",
        "express-validator": "^6.1.1",
        "jsonwebtoken": "^8.5.1",
        "lusca": "^1.6.1",
        "nodemailer": "^6.2.1",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@blendsdk/schemakit": "^0.9.2",
        "@blendsdk/sqlkit": "^0.9.5",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "^0.0.36",
        "@types/cors": "^2.8.5",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.0",
        "@types/express-session": "^1.15.13",
        "@types/jest": "^24.0.15",
        "@types/jsonwebtoken": "^8.3.2",
        "@types/lusca": "^1.6.0",
        "@types/morgan": "^1.7.35",
        "@types/node": "^12.6.0",
        "@types/nodemailer": "^6.2.0",
        "@types/pg": "^7.4.14",
        "@types/request": "^2.48.1",
        "@types/supertest": "^2.0.8",
        "@types/yesql": "^3.2.1",
        "chai": "^4.2.0",
        "concurrently": "^4.1.1",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "typescript": "^3.5.2"
    }
}
